.impact-card {
    height: 232px;
    position: relative;
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease-in-out;
}
.impact-card:hover {
    transform: scale(1.05);
}

      .card-image {
      width: 100%;
      height: auto;
      display: block;
      }

 .card-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(181, 161, 111, 0.8); /* Gold overlay */
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    padding: 20px;
}
    .card-overlay p {
    color: white;
    font-size: 1.1rem;
    font-weight: bold;
    margin: 0;
    text-transform: uppercase;
}

      .impact-card:hover .card-overlay {
